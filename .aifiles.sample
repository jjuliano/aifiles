# LLM Provider (openai, grok, ollama, lmstudio)
LLM_PROVIDER=openai

# OpenAI API key (for OpenAI provider)
OPENAI_API_KEY=

# Grok API key (for Grok provider)
GROK_API_KEY=

# LLM Model name (e.g., gpt-3.5-turbo, gpt-4, grok-beta, llama3.2, mistral)
LLM_MODEL=gpt-3.5-turbo

# LLM Base URL (for Ollama or LM Studio)
LLM_BASE_URL=http://127.0.0.1:11434

# Field definitions file - defines what data to extract from files
# NOT the actual LLM prompts (those are configured below)
FIELDS_FILE=~/.aifiles/fields.json

# Whether to ask for custom context at the start of the filename
PROMPT_FOR_CUSTOM_CONTEXT=true

# Whether to ask for a revision number at the end of the filename
PROMPT_FOR_REVISION_NUMBER=true

# Maximum number of words to send to OpenAI for processing
MAX_CONTENT_WORDS=50

# Maximum number of multimedia data sources to send to OpenAI
MAX_MEDIA_DATA_SOURCES=50

# Whether to move or copy the file to the designated directory
MOVE_FILE_OPERATION=true

# File Manager Indexing Mode
# 'launch' - Index all files at startup (thorough but slower startup)
# 'on-demand' - Index folders when expanded (default, faster startup)
FILE_MANAGER_INDEX_MODE=on-demand

# Organization Timeout (in seconds)
# Maximum time to wait for AI analysis before cancelling (default: 180 = 3 minutes)
# Increase if using slow AI models or slow network connections
ORGANIZATION_TIMEOUT=180

# ==========================================
# AI Prompt Customization
# ==========================================

# Custom prompt template for main file organization
# This is the master prompt template that wraps all prompts from prompts.json
# Available placeholders: {fileName}, {fileContent}, {exifMetadata}, {mimeType}, {mimeCategory}, {additionalPrompts}
# Leave empty to use default template
# Default: "Without prefacing it with anything, giving explanations or justifications, write a JSON object with an insightful but concise information for a \"{fileName}\" file classified as \"{mimeType} - {mimeCategory}\" with the file contents \"{fileContent}\". Make sure you double quote the JSON properties and values so it is valid JSON.\n\n### {additionalPrompts}"
#ORGANIZATION_PROMPT_TEMPLATE=

# Custom prompt for re-analyzing files in file manager (F6 key)
# Leave empty to use default prompt
# Default: "Analyze this file and provide: 1. A descriptive title 2. Main category 3. 3-5 relevant tags 4. Brief summary. Return as JSON with keys: title, category, tags, summary"
#REANALYZE_PROMPT=

# Custom prompt for watch mode file analysis
# Leave empty to use default prompt
# Default: Same as REANALYZE_PROMPT
#WATCH_MODE_PROMPT=

# Custom prompt for image caption generation (vision AI)
# Used when analyzing image files that support vision models
# Leave empty to use default prompt
# Default: "Provide a concise, descriptive caption for this image suitable for file organization."
#IMAGE_CAPTION_PROMPT=

# Note: All organization prompts automatically include these instructions:
# "Respond only with valid JSON containing exactly these fields: [field_list].
#  IMPORTANT:
#  - Start your response with { and end with }
#  - Do not write an introduction or summary
#  - Do not wrap the JSON in quotes or markdown code blocks
#  - Return ONLY the JSON object, nothing else"
# where [field_list] is dynamically generated from the template's field definitions.

# Base directory to store files
BASE_DIRECTORY=~

# ==========================================
# XDG User Directories (Standard Folders)
# ==========================================
# These directories are automatically scanned by the file manager
# to discover unorganized files. Files in these directories can be
# browsed and organized through the file manager interface.

# Directory for archived files
ARCHIVES_DIRECTORY=Archives
ARCHIVES_FILENAME_FORMAT={file_category_1}/{file_category_2}/{file_title}--{file_date_created}
ARCHIVES_FILE_NAME_CASE=pascal
# Example: If file_title = "Annual Report", file_date = "2022-02-24", file_category_1 = "Financials", file_category_2 = "Reports", and revision_number = 2, then the file name will be "Financials/Reports/AnnualReport--2022-02-24-v2.pdf"

# Directory for downloads (discovered files, not automatically organized)
DOWNLOADS_DIRECTORY=Downloads

# Directory for desktop files (discovered files, not automatically organized)
DESKTOP_DIRECTORY=Desktop

# Directory for documents
DOCUMENT_DIRECTORY=Documents
DOCUMENT_FILENAME_FORMAT={file_category_1}/{file_category_2}/{file_category_3}--{file_title}
DOCUMENT_FILE_NAME_CASE=snake
# Example: If file_title = "Project Plan", file_category_1 = "Projects", file_category_2 = "2022", file_category_3 = "Q1", and revision_number = 1, then the file name will be "Projects/2022/Q1--ProjectPlan-v1.docx"

# Directory for music files
MUSIC_DIRECTORY=Music
MUSIC_FILENAME_FORMAT={music_artist}/{music_album}/{music_track_number}--{music_track_title}
MUSIC_FILE_NAME_CASE=kebab
# Example: If artist = "Pink Floyd", album = "The Wall", title = "Another Brick in the Wall", track_number = "2", and revision_number = 3, then the file name will be "Pink-Floyd/The-Wall/02--Another-Brick-in-the-Wall-v3.mp3"

# Directory for other types of files
OTHERS_DIRECTORY=Others
OTHERS_FILENAME_FORMAT={file_category_1}/{file_category_2}/{file_title}
OTHERS_FILE_NAME_CASE=pascal
# Example: If file_title = "Meeting Notes", file_category_1 = "Business", file_category_2 = "2022", and revision_number = 2, then the file name will be "Business/2022/MeetingNotes-v2.txt"

# Directory for pictures
PICTURES_DIRECTORY=Pictures
PICTURES_FILENAME_FORMAT={picture_date_taken}/{file_title}
PICTURES_FILE_NAME_CASE=lower_snake
# Example: If file_title = "Family Portrait", picture_date_taken = "2022", month = "January", day = "1", and revision_number = 1, then the file name will be "2022-January-01/family_portrait_v1.jpg"

# Directory for videos
VIDEOS_DIRECTORY=Videos
VIDEOS_FILENAME_FORMAT={file_category_1}/{file_category_2}/{file_title}_{revision_number}
VIDEOS_FILE_NAME_CASE=upper_snake
# Example: If file_title = "Training Video", file_category_1 = "Business", file_category_2 = "Presentation", and revision_number = 1, then the file name will be "BUSINESS/PRESENTATION/TrainingVideo_1.mp4"

