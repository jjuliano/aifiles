{
  "name": "aifiles",
  "version": "2.0.0",
  "description": "Organize your files with AI - CLI tool with multiple LLM providers and auto-organize features",
  "keywords": [
    "ai",
    "file",
    "organize",
    "move",
    "chatgpt"
  ],
  "license": "MIT",
  "repository": "jjuliano/aifiles",
  "author": "Joel Bryan Juliano (joelbryan.juliano@gmail.com)",
  "type": "module",
  "files": [
    "dist"
  ],
  "bin": {
    "aifiles": "dist/cli.mjs",
    "aifiles-templates": "dist/cli-templates.mjs",
    "aifiles-setup": "dist/setup-wizard.mjs"
  },
  "scripts": {
    "prepare": "simple-git-hooks",
    "build": "pkgroll --minify 2>&1 | grep -v 'Circular dependency.*node_modules' || true",
    "setup": "node dist/setup-wizard.mjs",
    "templates": "node dist/cli-templates.mjs",
    "lint": "eslint --cache .",
    "type-check": "tsc",
    "test": "vitest --bail=1",
    "test:ui": "vitest --ui",
    "test:run": "vitest run --bail=1",
    "test:coverage": "vitest run --coverage --bail=1",
    "test:coverage:html": "vitest run --coverage --reporter=html",
    "test:integration": "vitest run integration/",
    "test:unit": "vitest run unit/ --bail=1",
    "test:unit:sequential": "node scripts/run-tests-sequential.js",
    "test:integration:end-to-end": "node scripts/run-integration-tests.js",
    "test:e2e:comprehensive": "vitest run tests/integration/e2e-comprehensive.test.ts --bail=1",
    "test:e2e:filemanager": "vitest run tests/integration/e2e-file-manager.test.ts --bail=1",
    "test:e2e:all": "vitest run tests/integration/e2e-*.test.ts --bail=1",
    "test:watch": "vitest --watch"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.ts": "eslint --cache"
  },
  "devDependencies": {
    "@clack/prompts": "^0.8.2",
    "@pvtnbr/eslint-config": "^0.38.0",
    "@types/ini": "^4.1.1",
    "@types/inquirer": "^9.0.7",
    "@types/mime": "^4.0.0",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.3.1",
    "axios": "^1.7.7",
    "chatgpt": "^5.2.5",
    "chokidar": "^3.6.0",
    "cleye": "^1.3.2",
    "depcheck": "^1.4.7",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "execa": "^8.0.1",
    "fast-check": "^4.3.0",
    "file-type": "^19.5.0",
    "filenamify": "^6.0.0",
    "ini": "^4.1.3",
    "jsdom": "^24.0.0",
    "kolorist": "^1.8.0",
    "lint-staged": "^15.2.0",
    "mime": "^4.0.4",
    "music-metadata": "^8.3.0",
    "node-fetch": "^3.3.2",
    "pkgroll": "^2.0.2",
    "simple-git-hooks": "^2.11.1",
    "tempfile": "^5.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@types/blessed": "^0.1.25",
    "better-sqlite3": "^12.4.1",
    "blessed": "^0.1.81",
    "langchain": "^0.2.0",
    "@langchain/core": "^0.2.0",
    "@langchain/openai": "^0.0.28",
    "@langchain/community": "^0.2.0"
  }
}
